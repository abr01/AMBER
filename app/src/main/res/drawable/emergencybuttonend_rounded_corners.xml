<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/emergency_button_disabled"/>
            <stroke android:color="#dcdada" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/emergency_button_pressed"/>
            <stroke android:color="#d40909" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="15dp" />
        </shape>
    </item><!-- pressed -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/emergency_button_focused"/>
            <stroke android:color="#d40909" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="15dp" />
        </shape>
    </item><!-- focused -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/emergency_button_end_messaging"/>
            <stroke android:color="@color/emergency_button_end_messaging" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="15dp" />
        </shape>
    </item> <!-- default -->
</selector>